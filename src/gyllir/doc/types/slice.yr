in slice;

use std::stream;

@final
pub class SliceType over Type {

    // The inner type of the slice
    let _child : &Type;
    
    pub self (isMut : bool, inner : &Type)
        with super (isMut-> isMut)
        , _child = inner
    {}

    /**
     * @returns: the type contained in the slice
     */
    pub fn getInnerType (self)-> &Type {
        return self._child
    }

    impl Streamable {
        pub over toStream (self, dmut stream : &StringStream) {
            stream:.write ("Slice (", self._child, ")");
        }
    }

    
}
