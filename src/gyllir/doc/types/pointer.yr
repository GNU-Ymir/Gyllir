in pointer;

use std::stream;

@final
pub class PointerType over Type {

    // The inner type of the pointer
    pub let child : &Type;

    pub self (isMut : bool, inner : &Type)
        with super (isMut-> isMut)
        , child = inner
    {}

    impl Streamable {
        pub over toStream (self, dmut stream : &StringStream) {
            stream:.write ("Pointer (", self.child, ")");
        }
    }
}
